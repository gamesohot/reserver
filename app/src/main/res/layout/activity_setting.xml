<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Systemusers.Setting"
    android:background="#e9fff4">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">
        <RelativeLayout
            android:background="#4e9e78"
            android:layout_width="match_parent"
            android:layout_height="56dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ตั้งค่าส่วนตัว"
                android:layout_centerInParent="true"
                android:textSize="30dp"
                android:textColor="#ffffff"


                />

        </RelativeLayout>



    </android.support.design.widget.AppBarLayout>
    <ScrollView
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:text="ชื่อ"
                   android:layout_marginLeft="30dp"
                   android:textSize="30dp"
                   android:layout_marginTop="20dp"
                   android:layout_marginRight="20dp"
                   />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="ที่อยู่"
                    android:layout_marginLeft="30dp"
                    android:textSize="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="อายุ"
                    android:layout_marginLeft="30dp"
                    android:textSize="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="เพศ"
                    android:layout_marginLeft="30dp"
                    android:textSize="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="หมู่เลือด"
                    android:layout_marginLeft="30dp"
                    android:textSize="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    />




                <Button
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="20dp"
                    android:text="ตั้งค่าการแจ้งเตือน"
                    android:padding="10dp"
                    android:fontFamily="@font/kanit_medium"
                    android:background="@drawable/green"
                    android:textColor="#ffffff"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"/>





                <Button
                    android:id="@+id/logout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ออกจากระบบ"
                    android:fontFamily="@font/kanit_medium"
                    android:layout_gravity="center"
                    android:layout_marginTop="170dp"
                    android:background="#ff8686"
                    android:textColor="#ffffff"
                    android:padding="10dp"
                    android:textSize="20dp"/>



            </LinearLayout>



        </RelativeLayout>



    </ScrollView>




    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="#6eae82"
        app:menu="@menu/menunavi">

    </android.support.design.widget.BottomNavigationView>


</android.support.design.widget.CoordinatorLayout>